@{
    ViewBag.Title = "MultiTreeSelector";
}
<div class="mini-toolbar" style="padding: 0px; border-bottom: 0;">
    <table style="width: 100%;">
        <tr>
            <td style="width: 100%;">
                <a class="mini-button" iconcls="icon-add" onclick="returnValue();" plain="true">
                    选择
                </a>
            </td>
            <td style="white-space: nowrap;"></td>
        </tr>
    </table>
</div>
<div class="mini-fit">
    <div id="dataTree" class="mini-treegrid" style="width:100%;height:100%;" multiselect="true" expandonload="true"
         url="GetTree" showtreeicon="true" iconfield="NodeType" sortfield="SortIndex" sortorder="asc"
         treecolumn="Name" idfield="ID" parentfield="ParentID" resultastree="false" checkrecursive="true" autocheckparent="false" showcheckbox="true"
         allowresize="true" fitcolumns="false">
        <div property="columns">
            <div type="indexcolumn"></div>
            <div name="Name" headeralign="center" field="Name" width="200">科目名称</div>
            <div field="Code" headeralign="center" width="120">科目编码</div>
        </div>
    </div>
</div>
<script type="text/javascript">
    function returnValue() {
        var dataTree = mini.get("dataTree");
        var nodes = dataTree.getCheckedNodes();
        closeWindow(nodes);
    }
</script>