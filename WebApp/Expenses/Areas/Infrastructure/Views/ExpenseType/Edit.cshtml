@{
    ViewBag.Title = "Edit";
}

<div id="formlayout" class="mini-layout" style="width: 100%; height: 100%;">
    <div region="north" height="32" showspliticon="false" showheader="false" allowresize="false" splitsize="0"
         style="border: 0;">
        <div class="mini-toolbar" style="padding: 0px; border-left: 0; border-top: 0; border-right: 0;">
            <table style="width: 100%;">
                <tr>
                    <td style="width: 100%;">
                        <a class="mini-button" iconcls="icon-save" onclick="save();" plain="true">保存</a>
                        <a class="mini-button" iconcls="icon-cancel" onclick="closeWindow()" plain="true">取消</a>
                    </td>
                </tr>
            </table>
        </div>
    </div>
    <div title="center" region="center" style="border: 0;">
        <div id="dataForm">
            <input name="ID" class="mini-hidden" />
            <div style="padding-left: 20px; padding-top: 10px;">
                <table width="100%" border="0" cellpadding="0" cellspacing="2">
                    <tr>
                        <td></td>
                        <td colspan="3" style="padding-right: 40px;"></td>
                    </tr>
                    <tr>
                        <td width="15%">费用代码</td>
                        <td width="35%;" style="padding-right: 40px;">
                            <input name="Code" style="width: 100%" class="mini-textbox" required="true" vtype="maxLength:50" />
                        </td>
                        <td width="15%">费用名称</td>
                        <td width="35%;" style="padding-right: 40px;">
                            <input name="Name" style="width: 100%" class="mini-textbox" required="true" vtype="maxLength:50" />
                        </td>
                    </tr>
                    <tr>
                        <td>归集方式</td>
                        <td style="padding-right: 40px;">
                            <input name="ToCostMethod" class="mini-combobox" style="width: 100%;" textfield="text" valuefield="value"
                                   data="ExpenseType" allowinput="false" required="true" />
                        </td>
                        <td>是否必选项目</td>
                        <td style="padding-right: 40px;">
                            <div name="NeedProject" class="mini-radiobuttonlist" repeatitems="4" repeatlayout="table" repeatdirection="horizontal"
                                 textfield="text" valuefield="value" data="TrueOrFalse" required="true">
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>可否报销</td>
                        <td style="padding-right: 40px;">
                            <div name="CanReimburse" class="mini-radiobuttonlist" repeatitems="4" repeatlayout="table" repeatdirection="horizontal"
                                 textfield="text" valuefield="value" data="TrueOrFalse" required="true">
                            </div>
                        </td>
                        <td>成本归属</td>
                        <td style="padding-right: 40px;">
                            <input name="SubjectType" class="mini-combobox" style="width: 100%;" textfield="text" valuefield="value"
                                   data="SubjectType" allowinput="false" required="true" />
                        </td>
                    </tr>
                    <tr>
                        <td>备注</td>
                        <td colspan="3" style="padding-right: 40px;">
                            <input name="Remark" class="mini-textarea" style="width: 100%;height:100px;" vtype="maxLength:100" />
                        </td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    @Html.GetEnum("System.TrueOrFalse")
    @Html.GetEnum(typeof(Expenses.Logic.ExpenseType))
    @Html.GetEnum(typeof(Expenses.Logic.SubjectType))
</script>
