@{
    ViewBag.Title = "Edit";
}


<div id="formlayout" class="mini-layout" style="width: 100%; height: 100%;">
    <div region="north" height="32" showspliticon="false" showheader="false" allowresize="false" splitsize="0"
         style="border: 0;">
        <div class="mini-toolbar" style="padding: 0px; border-left: 0; border-top: 0; border-right: 0;">
            <table style="width: 100%;">
                <tr>
                    <td style="width: 100%;">
                        <a class="mini-button" iconcls="icon-save" onclick="save();" plain="true">保存</a>
                    </td>
                </tr>
            </table>
        </div>
    </div>
    <div title="center" region="center" style="border: 0;">
        <div id="dataForm">
            <input name="ID" class="mini-hidden" />
            <div style="padding-left: 20px; padding-top: 10px;">
                <fieldset>
                    <legend>基本设置</legend>
                    <table width="100%" border="0" cellpadding="0" cellspacing="2">
                        <tr>
                            <td></td>
                            <td colspan="3" style="padding-right: 40px;"></td>
                        </tr>
                        <tr>
                            <td width="15%">是否默认</td>
                            <td width="35%;" style="padding-right: 40px;">
                                <input name="IsDefault" class="mini-combobox" style="width: 100%;" textfield="text" valuefield="value" required="true"
                                       data="trueOrFalse" allowinput="true" />
                            </td>
                            <td width="15%">预算依据</td>
                            <td width="35%;" style="padding-right: 40px;">
                                <input name="BudgetBasisField" class="mini-combobox" style="width: 100%;" textfield="text" valuefield="value" required="true"
                                       data="filedInfo" allowinput="true" />
                            </td>
                        </tr>
                        <tr>
                            <td>明细包含</td>
                            <td style="padding-right: 40px;" colspan="3">
                                <div name="DetailTabs" class="mini-checkboxlist" repeatitems="4" repeatlayout="table"
                                     textfield="text" valuefield="value" data="SubjectType">
                                </div>

                            </td>
                        </tr>
                        <tr>
                            <td>描述说明</td>
                            <td colspan="3" style="padding-right: 40px;">
                                <input name="Description" class="mini-textarea" style="width: 100%;height:100px;" vtype="maxLength:100" />
                            </td>
                        </tr>
                        <tr>
                            <td></td>
                            <td style="padding-right: 40px;"></td>
                            <td></td>
                            <td style="padding-right: 40px;"></td>
                        </tr>
                    </table>
                </fieldset>
                <fieldset>
                    <legend>条件设置</legend>
                    <table>
                        <tr>
                            <td>
                                <div class="mini-toolbar" style="padding: 0px; border-bottom: 0;">
                                    <table style="width: 100%;">
                                        <tr>
                                            <td style="width: 100%;">
                                                <a class="mini-button" iconcls="icon-add" onclick="addRow({ Group: 'Group1' }, { gridId: 'Condition' })" plain="true">增加</a>
                                                <a class="mini-button" iconcls="icon-remove" onclick="delRow({ gridId: 'Condition' })" plain="true">删除</a>
                                            </td>
                                            <td style="white-space: nowrap;"></td>
                                        </tr>
                                    </table>
                                </div>
                                <div id="Condition" class="mini-datagrid" style="width: 100%; height: auto" idfield="ID" showpager="false"
                                     allowcelledit="true" allowcellselect="true" multiselect="true" editnextonenterkey="true" editnextrowcell="true">
                                    <div property="columns">
                                        <div type="checkcolumn">
                                        </div>
                                        <div type="comboboxcolumn" autoshowpopup="true" field="FieldName" width="90" headeralign="center" allowsort="false" align="center">
                                            字段名<input property="editor" class="mini-combobox" valuefield="value" , textfield="text" style="width:100%;" data="CBSNodeColumnInfo" />
                                        </div>
                                        <div type="comboboxcolumn" field="QueryMode" width="60" headeralign="center" allowsort="false" align="center" autoshowpopup="true">
                                            运算符<input property="editor" class="mini-combobox" valuefield="value" textfield="text" data="queryModeEnum" style="width: 100%;" />
                                        </div>
                                        <div field="Value" width="100" headeralign="center" allowsort="false" align="left">
                                            值<input property="editor" class="mini-textbox" style="width:100%;" />
                                        </div>
                                        <div field="Group" width="70" headeralign="center" allowsort="false" align="center">
                                            分组<input property="editor" class="mini-textbox" style="width:100%;" />
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    </table>
                </fieldset>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
   @Html.GetEnum(typeof(Expenses.Logic.SubjectType))
   @Html.GetEnum("Expenses.CBSNodeColumnInfo")
    var queryModeEnum = [
  { value: "Equal", text: "=" },
  { value: "LessThan", text: "<" },
  { value: "GreaterThan", text: ">" },
  { value: "LessThanOrEqual", text: "<=" },
  { value: "GreaterThanOrEqual", text: ">=" },
  { value: "Like", text: "Like" },
  { value: "In", text: "In" }];
</script>
<script type="text/javascript">
    var filedInfo = [{ text: "直接合同额", value: "ContractValue" }, { text: "计划产值额", value: "ProductionValue" }, { text: "去税合同额", value: "ContractClearValue" }];
    var trueOrFalse = [{ text: "是", value: "true" }, { text: "否", value: "false" }];
</script>
