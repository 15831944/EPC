@{
    ViewBag.Title = "InvoiceList";
}
<div class="mini-toolbar" style="padding: 2px; border-bottom: 0;">
    <table style="width: 100%;">
        <tr>
            <td style="width: 100%;">
            </td>
            <td style="white-space: nowrap;">
                @*<input class="mini-buttonedit searchbox" id="key" emptytext="请输入开票编号" style="width: 200px;" onenter="quickSearch('InvoiceCode');"
                    onbuttonclick="quickSearch('InvoiceCode');" />*@
            </td>
        </tr>
    </table>
</div>
<div class="mini-fit" style="height: 100px;">
    <div id="dataGrid" url="GetInvoiceList" showsummaryrow="true" showpager="false" class="mini-datagrid"
        style="width: 100%; height: 100%;" idfield="ID" multiselect="true" ondrawsummarycell="onDrawSummaryCell">
        <div property="columns">
            <div type="checkcolumn">
            </div>
            <div field="InvoiceType" width="120" headeralign="center" allowsort="true" align="center">
                发票类型</div>
            <div field="Amount" summarytype="sum" width="100" datatype="currency" width="120" headeralign="center"
                allowsort="true" align="right">
                开票金额</div>
            <div field="CreateDate" width="100" headeralign="center" dateformat="yyyy-MM-dd" allowsort="true" align="center">
                开票日期</div>
            <div field="Remark" headeralign="center" width="300" allowsort="true">
                备注</div>
        </div>
    </div>
</div>
<script type="text/javascript">
@Html.GetEnum(typeof(Market.Logic.InvoiceType))
</script>
<script type="text/javascript">
    addGridEnum("dataGrid", "InvoiceType", "InvoiceType");
    addGridLink("dataGrid", "Amount", '/Market/Basic/Invoice/InvoiceEdit?ID={ID}', { funcType: 'view', height: '70%', width: '70%' });

    function onDrawSummaryCell(e) {
        e.cellStyle = " text-align: right;color:red";
    }

</script>
