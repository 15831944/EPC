@{
    ViewBag.Title = "IndicatorConfigEdit";
}
<div id="formlayout" class="mini-layout" style="width: 100%; height: 100%;">
    <div region="north" height="32" showspliticon="false" showheader="false" allowresize="false"
        splitsize="0" style="border: 0;">
        <div class="mini-toolbar" style="padding: 0px; border-left: 0; border-top: 0; border-right: 0;">
            <table style="width: 100%;">
                <tr>
                    <td style="width: 100%;">
                        <a class="mini-button" iconcls="icon-save" onclick="save();" plain="true">保存</a>
                        <a class="mini-button" iconcls="icon-cancel" onclick="closeWindow()" plain="true">取消</a>
                    </td>
                </tr>
            </table>
        </div>
    </div>
    <div title="center" region="center" style="border: 0;">
        <div id="dataForm">
            <input name="ID" class="mini-hidden" />
            <div style="padding-left: 20px; padding-top: 10px;">
                <table width="100%" border="0" cellpadding="0" cellspacing="2">
                    <tr>
                        <td width="15%">
                            指标名称
                        </td>
                        <td width="35%;" style="padding-right: 40px;">
                            <input name="IndicatorName" style="width: 100%" class="mini-textbox" required="true"
                                vtype="maxLength:200" />
                        </td>
                        <td width="15%">
                            指标编号
                        </td>
                        <td width="35%;" style="padding-right: 40px;">
                            <input name="IndicatorCode" style="width: 100%" class="mini-textbox" required="true"
                                vtype="maxLength:200" />
                        </td>
                    </tr>
                    <tr>
                        <td>
                            关联数据源
                        </td>
                        <td style="padding-right: 40px;">
                            <input name="DataSource" class="mini-combobox" style="width: 100%;" textfield="text"
                                valuefield="value" data="ConnEnum" allowinput="false" />
                        </td>
                    </tr>
                    <tr>
                        <td>
                            关联数据表
                        </td>
                        <td style="padding-right: 40px;">
                            <input name="RelateCaculateTable" style="width: 100%" class="mini-textbox" required="true"
                                vtype="maxLength:200" />
                        </td>
                        <td>
                            实际完成关联字段
                        </td>
                        <td style="padding-right: 40px;">
                            <input name="RelateCaculateField" style="width: 100%" class="mini-textbox" required="true"
                                vtype="maxLength:200" />
                        </td>
                    </tr>
                    <tr>
                        <td>
                            部门ID关联字段
                        </td>
                        <td style="padding-right: 40px;">
                            <input name="RelateOrgField" style="width: 100%" class="mini-textbox" vtype="maxLength:200" />
                        </td>
                        <td>
                            部门名称关联字段
                        </td>
                        <td style="padding-right: 40px;">
                            <input name="RelateOrgNameField" style="width: 100%" class="mini-textbox" vtype="maxLength:200" />
                        </td>
                    </tr>
                    <tr>
                        <td>
                            用户ID关联字段
                        </td>
                        <td style="padding-right: 40px;">
                            <input name="RelateUserField" style="width: 100%" class="mini-textbox" vtype="maxLength:200" />
                        </td>
                        <td>
                            用户名称关联字段
                        </td>
                        <td style="padding-right: 40px;">
                            <input name="RelateUserNameField" style="width: 100%" class="mini-textbox" vtype="maxLength:200" />
                        </td>
                    </tr>
                    <tr>
                        <td>
                            年度字段
                        </td>
                        <td style="padding-right: 40px;">
                            <input name="YearField" style="width: 100%" class="mini-textbox" vtype="maxLength:200" />
                        </td>
                        <td>
                            季度字段
                        </td>
                        <td style="padding-right: 40px;">
                            <input name="QuarterField" style="width: 100%" class="mini-textbox" vtype="maxLength:200" />
                        </td>
                    </tr>
                    <tr>
                        <td>
                            月度字段
                        </td>
                        <td style="padding-right: 40px;">
                            <input name="MonthField" style="width: 100%" class="mini-textbox" vtype="maxLength:200" />
                        </td>
                        <td>
                            排序
                        </td>
                        <td style="padding-right: 40px;">
                            <input name="SortIndex" style="width: 100%" class="mini-textbox" required="true"
                                vtype="int" />
                        </td>
                    </tr>
                    <tr>
                        <td>
                            指标组织类别
                        </td>
                        <td style="padding-right: 40px;">
                            <input name="OrgType" class="mini-combobox" style="width: 100%;" textfield="text"
                                valuefield="value" data="IndicatorOrgType" allowinput="false" shownullitem="false"
                                multiselect="true" required="true" />
                        </td>
                        <td>
                        </td>
                        <td>
                        </td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
        @Html.GetEnum(typeof(Config.ConnEnum));
        @Html.GetEnum(typeof(Market.Logic.IndicatorOrgType));
</script>
