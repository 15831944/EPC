<div style="overflow: hidden;" class="mini-fit" style="width: 100%;">
    <iframe id="content" name="content" src="" scrolling="no" width="100%" height="100%" frameborder="no">
    </iframe>
</div>
<script type="text/javascript" language="javascript">
    $(document).ready(function () {
        $("a").bind("click", function (e) {
            var url = e.srcElement.href;
            if ($("#content").attr("src") != url) {
                $("#content").attr("src", url);
                //设置背景颜色
                for (var i = 0, len = $("a").length; i < len; i++) {
                    if ($("a")[i].href == url)
                        $("a")[i].className = "current";
                    else
                        $("a")[i].className = "";
                }
            }
            return false;
        });
        $("a")[0].click(); //默认触发.
    });
</script>
