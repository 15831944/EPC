@{
    ViewBag.Title = "FileAttrSelect";
}
<div class="mini-toolbar" style="padding: 2px; border-top: 0; border-left: 0; border-right: 0;">
    <table style="width: 100%;">
        <tr>
            <td style="width: 100%;">
                <a class="mini-button" iconcls="icon-ok" onclick="returnValue();" plain="true">选择</a>
            </td>
            <td class="gw-toolbar-right">
                <input id="key" class="mini-buttonedit gw-searchbox" emptytext="请输入属性名称或字段名称" onenter="quickSearch('FileAttrName,FileAttrField',{gridId:'FileAttrSelect'});"
                    onbuttonclick="quickSearch('FileAttrName,FileAttrField',{gridId:'FileAttrSelect'});" />
            </td>
        </tr>
    </table>
</div>
<div class="mini-fit" style="height: 100px;">
    <div id="FileAttrSelect" url="FileAttrConfigList" class="mini-datagrid" style="width: 100%;
        height: 100%;" allowresize="false" idfield="id" multiselect="true" borderstyle="border:0">
        <div property="columns">
            <div type="checkcolumn">
            </div>
            <div field="FileAttrName" width="*" headeralign="center" allowsort="true" align="center">
                属性名称</div>
            <div field="FileAttrField" width="250" headeralign="center" allowsort="true" align="center">
                字段名称</div>
        </div>
    </div>
</div>
<script type="text/javascript">
    function returnValue() {
        var grid = mini.get("FileAttrSelect");
        var rows = grid.getSelecteds();
        closeWindow(rows);
    }
</script>
